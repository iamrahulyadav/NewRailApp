<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rail"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:shadowColor="@android:color/holo_orange_dark"
        android:shadowDx="2"
        android:text="INDIAN RAILWAYS ENQUIRY"
        android:textColor="@android:color/holo_orange_light"
        android:textColorHighlight="@android:color/holo_red_dark"
        android:textSize="28dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/detailBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:layout_marginStart="19dp"
        android:text="TRAIN DETAILS"
        android:textColor="@android:color/holo_red_light"
        android:textSize="18dp" />

    <Button
        android:id="@+id/pnrBTN"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/detailBTN"
        android:layout_marginEnd="31dp"
        android:text="CHECK PNR"
        android:textColor="@android:color/holo_red_light"
        android:textSize="18dp" />
</RelativeLayout>